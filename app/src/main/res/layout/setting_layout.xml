<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/all_screen_background"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/linear_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile"
                        android:tint="#000000"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Profile"
                        android:textColor="#000000"
                        android:textSize="14sp"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="5dp"
                    android:background="#969393"
                    android:padding="2dp"
                    android:visibility="gone"
                    tools:ignore="Suspicious0dp"></View>


            <LinearLayout
                    android:id="@+id/linear_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                <ImageView
                        android:id="@+id/iv_about_us"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/new_about_us_iconn"
                        android:tint="@color/setting_screen_color"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="About Us"
                        android:textColor="@color/setting_screen_color"
                        android:textSize="14sp"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#E9E9F1"
                    android:padding="2dp"
                    tools:ignore="Suspicious0dp"></View>

            <LinearLayout
                    android:id="@+id/linear_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/iv_terms_us"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/terms_condtion"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Term &amp; Conditions "
                        android:textColor="@color/setting_screen_color"
                        android:textSize="14sp"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#E9E9F1"
                    android:padding="2dp"
                    android:visibility="gone"
                    tools:ignore="Suspicious0dp"></View>

            <LinearLayout
                    android:id="@+id/linear_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                <ImageView
                        android:id="@+id/iv_privacy_us"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/privacy_policy_new_iconn"
                        android:tint="@color/setting_screen_color"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Privacy Policy"
                        android:textColor="@color/setting_screen_color"
                        android:textSize="14sp"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#E9E9F1"
                    android:padding="2dp"
                    tools:ignore="Suspicious0dp"></View>

            <LinearLayout
                    android:id="@+id/linear_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                <ImageView
                        android:id="@+id/iv_change_password"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/new_change_password_iconn"
                        android:tint="@color/setting_screen_color"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Change Password"
                        android:textColor="@color/setting_screen_color"
                        android:textSize="14sp"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#E9E9F1"
                    android:padding="2dp"
                    tools:ignore="Suspicious0dp"></View>

            <LinearLayout
                    android:id="@+id/linear_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                <ImageView
                        android:id="@+id/iv_help_us"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/help_new_iconn"
                        android:tint="@color/setting_screen_color"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Help"
                        android:textColor="@color/setting_screen_color"
                        android:textSize="14sp"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#E9E9F1"
                    android:padding="2dp"
                    tools:ignore="Suspicious0dp"></View>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
            android:id="@+id/tv_version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/setting_screen_color"
            android:textSize="14sp"
            android:textStyle="bold"/>
</RelativeLayout>