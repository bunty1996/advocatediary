<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_phone_verification"
        tools:context="com.advocatediary.activity.phoneVerification.PhoneVerificationActivity">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

        <LinearLayout
                android:id="@+id/linear_verifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logoo2" />

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_title_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="Enter the 6-digit code sent to you \n at "
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:visibility="gone"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp">

                    <EditText
                            android:id="@+id/et_otp_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="Enter OTP"
                            android:padding="10dp"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="6">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/et_first_text"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_white_border"
                                android:hint="x"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="#4C7FC1"
                                android:singleLine="true"
                                android:textSize="17sp" />

                        <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/et_second_text"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_white_border"
                                android:hint="x"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:padding="5dp"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="#4C7FC1"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="17sp" />

                        <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/et_third_text"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_white_border"
                                android:hint="x"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="#4C7FC1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:gravity="center"
                                android:textSize="17sp" />

                        <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/et_fourth_text"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_white_border"
                                android:hint="x"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="#4C7FC1"
                                android:gravity="center"
                                android:maxLength="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textSize="17sp" />

                        <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/et_fifth_text"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_white_border"
                                android:hint="x"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="#4C7FC1"
                                android:maxLength="1"
                                android:padding="5dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="17sp" />

                        <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#ffffff" />
                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/et_sixth_text"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_white_border"
                                android:hint="x"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="#4C7FC1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textSize="17sp" />

                        <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#ffffff" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                        android:id="@+id/rel_done_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/border_layout"
                        android:gravity="center"
                        android:padding="0dp">

                    <TextView
                            android:id="@+id/bt_verify"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:text="Submit"
                            android:textAllCaps="true"
                            android:textColor="#4867b0"
                            android:textStyle="bold" />

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/new_check_mark" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
