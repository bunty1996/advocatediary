<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

            <TextView
                    android:id="@+id/tv_first_text_case"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text=""
                    android:textColor="#000000"
                    android:textSize="13sp" />

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

            <TextView
                    android:id="@+id/tv_second_text_case"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="7dp"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""

                    android:textColor="#000000"
                    android:textSize="13sp" />

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

            <LinearLayout
                    android:id="@+id/linear_nots_click"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:gravity="center"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_pending_payment"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="center"

                        android:text="gjgjjjjjbjjkkjbjjhhjjjjjjjjjjjjjj"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                <ImageView
                        android:id="@+id/iv_info_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/information" />
            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@android:color/darker_gray" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="7dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="efefefef"
                        android:textColor="#000000"
                        android:textSize="13sp" />


            </LinearLayout>
        </LinearLayout>

        <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/darker_gray" />
    </LinearLayout>
</RelativeLayout>