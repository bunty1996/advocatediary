<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/all_screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/linear_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/imgBack_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/back_button_padding"
                    android:visibility="invisible"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/new_back_icon"/>

            <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gif_image_reset"
                    android:layout_width="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="100dp"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reset Password"/>

                    <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#869099"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reset your password by creating new one"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/change_password_edit_back"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/et_passwordFirst"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:gravity="start|center"
                                android:hint="New password"
                                android:inputType="textPassword"
                                android:textColorHint="@color/editTextColor_field_hint_color"
                                android:textColor="@color/editTextColor_field_add_client"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true"
                                android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"

                            android:layout_marginTop="5dp"

                            android:layout_marginBottom="4dp"
                            android:background="@drawable/change_password_edit_back"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/et_confirm_passwordFirst"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:gravity="start|center"
                                android:hint="Enter Confirm password"
                                android:inputType="textPassword"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:textColorHint="@color/editTextColor_field_hint_color"
                                android:textColor="@color/editTextColor_field_add_client"
                                android:paddingBottom="10dp"
                                android:singleLine="true"
                                android:textSize="14sp"/>
                    </LinearLayout>


                    <RelativeLayout
                            android:id="@+id/rel_done_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:padding="0dp">

                        <Button
                                android:id="@+id/btn_reset_password"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/blue_submit_button"
                                android:text="Reset Password"
                                android:textAllCaps="true"
                                android:textColor="#ffffff"
                                android:textSize="14sp"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>