<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/all_screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/login_back">

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/all_screen_background">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_login_layout"
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imgBack"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:padding="@dimen/back_button_padding"
                            android:src="@drawable/new_back_icon"/>

                    <ImageView
                            android:id="@+id/new_logo_signup"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="0dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/adv_newlogo"/>

                    <TextView
                            android:text="Log In"
                            android:textColor="#FEFEFE"
                            android:layout_below="@+id/new_logo_signup"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"

                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="65">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginLeft="13dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardElevation="4dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/change_password_edit_back">

                                <EditText
                                        android:id="@+id/tv_user_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#00000000"
                                        android:gravity="start|bottom"
                                        android:hint="Full Name *"
                                        android:inputType="textCapSentences"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="10dp"
                                        android:singleLine="true"
                                        android:textCursorDrawable="@drawable/cursor_color"
                                        android:textColorHint="@color/editTextColor_field_hint_color"
                                        android:textColor="@color/editTextColor_field_add_client"
                                        android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/change_password_edit_back"
                                    android:orientation="horizontal">
                                <TextView
                                        android:id="@+id/tv_code_register"
                                        android:layout_width="wrap_content"
                                        android:text="+91"
                                        android:padding="10dp"
                                        android:textSize="14sp"
                                        android:textColorHint="@color/editTextColor_field_hint_color"
                                        android:textColor="@color/editTextColor_field_add_client"
                                        android:layout_height="wrap_content"/>
                                <View android:layout_width="1dp"
                                      android:layout_height="match_parent"
                                      android:layout_margin="8dp"
                                      android:background="@android:color/darker_gray"/>

                                <EditText
                                        android:id="@+id/tv_phone"
                                        android:layout_width="match_parent"
                                        android:hint="Enter your mobile number"
                                        android:layout_marginLeft="10dp"
                                        android:singleLine="true"
                                        android:inputType="number"
                                        android:textSize="14sp"
                                        android:maxLength="10"
                                        android:textColorHint="@color/editTextColor_field_hint_color"
                                        android:textColor="@color/editTextColor_field_add_client"
                                        android:background="@android:color/transparent"
                                        android:layout_height="match_parent"/>
                            </LinearLayout>


                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/change_password_edit_back"
                                    android:orientation="horizontal">

                                <EditText
                                        android:id="@+id/et_passwordFirst"
                                        android:layout_width="match_parent"
                                        android:hint="Enter password"
                                        android:layout_marginLeft="0dp"
                                        android:padding="10dp"
                                        android:textSize="14sp"
                                        android:singleLine="true"
                                        android:inputType="textPassword"
                                        android:textColorHint="@color/editTextColor_field_hint_color"
                                        android:textColor="@color/editTextColor_field_add_client"
                                        android:background="@android:color/transparent"
                                        android:layout_height="match_parent"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/change_password_edit_back"
                                    android:orientation="horizontal">
                                <EditText
                                        android:id="@+id/et_emailFirst"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:gravity="start|bottom"
                                        android:hint="Email address (Optional)"
                                        android:inputType="textEmailAddress"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="4dp"
                                        android:paddingRight="10dp"
                                        android:textColorHint="@color/editTextColor_field_hint_color"
                                        android:textColor="@color/editTextColor_field_add_client"
                                        android:textCursorDrawable="@drawable/cursor_color"

                                        android:paddingBottom="10dp"
                                        android:singleLine="true"

                                        android:textSize="14sp"/>
                            </LinearLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/change_password_edit_back">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toLeftOf="@+id/iv_state_arrow"
                                        android:orientation="vertical">

                                    <TextView
                                            android:id="@+id/tv_state"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#00000000"
                                            android:gravity="start|bottom"
                                            android:hint="Select State *"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="10dp"
                                            android:textCursorDrawable="@drawable/cursor_color"
                                            android:textColorHint="@color/editTextColor_field_hint_color"
                                            android:textColor="@color/editTextColor_field_add_client"
                                            android:paddingRight="10dp"
                                            android:paddingBottom="10dp"
                                            android:singleLine="true"
                                            android:textSize="14sp"/>
                                </LinearLayout>

                                <ImageView
                                        android:id="@+id/iv_state_arrow"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"

                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/down_arrow"
                                        android:tint="#000000"/>
                            </RelativeLayout>

                            <LinearLayout
                                    android:id="@+id/linear_district_click"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/change_password_edit_back">

                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="bottom"
                                        android:orientation="horizontal">

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_toLeftOf="@+id/iv_district_arrow"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                        <TextView
                                                android:id="@+id/tv_district"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="#00000000"
                                                android:gravity="start|bottom"
                                                android:hint="Select District *"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="10dp"
                                                android:paddingRight="10dp"
                                                android:paddingBottom="10dp"
                                                android:textCursorDrawable="@drawable/cursor_color"
                                                android:singleLine="true"
                                                android:textColorHint="@color/editTextColor_field_hint_color"
                                                android:textColor="@color/editTextColor_field_add_client"
                                                android:textSize="14sp"/>
                                    </LinearLayout>

                                    <ImageView
                                            android:id="@+id/iv_district_arrow"
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center_vertical|right"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/down_arrow"
                                            android:tint="#000000"/>
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="6dp"
                                    android:gravity="start|center"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="1">

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="start|center">

                                    <CheckBox
                                            android:id="@+id/checkbox"
                                            android:layout_width="25dp"
                                            android:layout_height="20dp"
                                            android:buttonTint="@color/colorPrimary"
                                            android:gravity="center"
                                            android:scaleX="0.80"
                                            android:scaleY="0.80"
                                            android:theme="@style/WhiteCheck"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/linear_check_text"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.9">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start|center"
                                            android:padding="5dp"
                                            android:text="I accept all Terms &amp; Conditions"
                                            android:textColor="@color/editTextColor_field_add_client"

                                            android:textSize="12sp"/>

                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                    android:id="@+id/rel_register"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:gravity="center"
                                    android:padding="0dp">

                                <!-- <TextView
                                         android:id="@+id/register"
                                         android:layout_width="match_parent"
                                         android:layout_height="45dp"
                                         android:gravity="center"
                                         android:text="Sign Up"
                                         android:textAllCaps="false"
                                         android:textColor="#ffffff"
                                         android:textStyle="bold"/>-->

                                <Button
                                        android:id="@+id/register"
                                        android:layout_width="220dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="12dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="12dp"
                                        android:background="@drawable/blue_submit_button"
                                        android:text="Sign Up"
                                        android:textAllCaps="true"
                                        android:textColor="#ffffff"
                                        android:textSize="14sp"/>

                            </RelativeLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:text="Already have an account? "
                                        android:textAllCaps="false"
                                        android:textColor="#8A949D"
                                        android:textSize="14sp"/>

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                    <TextView
                                            android:id="@+id/tv_login_title1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="start"
                                            android:text=" Log In"
                                            android:textAllCaps="false"
                                            android:textColor="#8A949D"
                                            android:textStyle="bold"
                                            android:textSize="14sp"/>

                                    <View
                                            android:layout_width="60dp"
                                            android:layout_height="0.5dp"
                                            android:layout_marginTop="-2dp"
                                            android:background="#ffffff"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>